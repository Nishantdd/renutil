{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Renutil",
  "version": "0.1.2",
  "identifier": "com.renutil.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Renutil",
        "minHeight": 580,
        "minWidth": 860,
        "width": 860,
        "height": 580,
        "zoomHotkeysEnabled": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "dmg", "msi", "rpm"],
    "macOS": {
      "signingIdentity": "-"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
